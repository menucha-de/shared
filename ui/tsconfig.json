{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "downlevelIteration": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@mica/shared": [
        "dist/mica-shared"
      ],
      "@mica/shared/*": [
        "dist/mica-shared/*"
      ],
      "@mica/controls": [
        "dist/mica-controls"
      ],
      "@mica/controls/*": [
        "dist/mica-controls/*"
      ]
    }
  }
}